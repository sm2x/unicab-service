<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnicabApp.Landing.ForgotPassengerPasswordPage"
             Title="Forgot Passenger Password"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand" Padding="20">
                <Label Text="Lost your passenger password? Don't worry, you can retrieve it here!" FontSize="Large" LineBreakMode="WordWrap" HorizontalOptions="Center" HorizontalTextAlignment="Center" Margin="0,5,0,10" />
                <Label Text="USM e-mail addrress" />
                <Entry x:Name="rpwUsernameEntry" Placeholder="Enter e-mail address here" PlaceholderColor="DimGray" />

                <Button x:Name="RetrievePasswordBtn" Text="Retrieve Password" Clicked="RetrievePasswordBtn_Clicked" />
                <Button x:Name="CancelBtn" Text="Cancel" Clicked="CancelBtn_Clicked" />
                <Label x:Name="rpwMessageLabel" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>